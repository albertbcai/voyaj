{
  "name": "voyaj",
  "version": "0.1.0",
  "description": "AI-powered group trip coordination bot",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "test": "node --test tests/**/*.test.js",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:integration": "node --test tests/integration/**/*.test.js",
    "test:edge-cases": "node --test tests/edge-cases/**/*.test.js",
    "test:scenarios": "node tests/scripts/full-trip-flow.js",
    "test:performance": "node --test tests/performance/**/*.test.js",
    "test:security": "node --test tests/security/**/*.test.js",
    "db:migrate": "node scripts/migrate.js",
    "db:add-notes": "node scripts/add-notes-column.js"
  },
  "keywords": ["trip", "coordination", "ai", "sms"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "@anthropic-ai/sdk": "^0.20.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}


